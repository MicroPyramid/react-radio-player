{
    "root": true,
    "extends": [
	    "eslint:recommended",
	    "plugin:react/recommended",
	    "plugin:jsx-a11y/recommended"
	  ],
	{
	  "plugins": [
	    "jsx-a11y"
	  ]
	},
    "rules": {
    	"jsx-a11y/anchor-is-valid": [ "error", {
	        "components": [ "Link" ],
	        "specialLink": [ "hrefLeft", "hrefRight" ],
	        "aspects": [ "noHref", "invalidHref", "preferButton" ]
	      }]
    }
}